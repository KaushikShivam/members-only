<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
       <%= link_to 'Members Only', root_path, class: "navbar-brand" %> 
    </div>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to 'Show Posts', root_path %> </li>
      <% if current_user.nil? %>
        <li><%= link_to 'Log In', login_path %></li>
        <li><%= link_to 'Sign Up', signup_path %></li>
      <% else %>
        <li><%= link_to 'Log Out', '/logout', method: :delete %> </li>
      <% end %>
    </ul>
  </div>
</nav>
  
  <% if flash[:error] %>
  <h2 class="bg-danger text-center"><%= flash[:error] %></h2>
<% elsif flash[:success] %>
  <h2 class="bg-success"><%= flash[:success] %></h2>
<% end %>
    <%= yield %>
  </body>
</html>
