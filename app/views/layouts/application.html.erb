<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
       <%= link_to 'Members Only', root_path, class: "navbar-brand" %> 
    </div>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to 'Show Posts', root_path %> </li>
      <% if current_user.nil? %>
        <li><%= link_to 'Log In', login_path %></li>
        <li><%= link_to 'Sign Up', signup_path %></li>
      <% else %>
        <li><%= link_to 'Create post', new_post_path %></li>
        <li><%= link_to 'View Profile', user_path(current_user) %></li>
        <li><%= link_to 'View Users', users_path %></li>
        <li><%= link_to 'Log Out', '/logout', method: :delete %> </li>
      <% end %>
    </ul>
  </div>
</nav>
   
<main class="container">
  <% if flash[:error] %>
  <%= content_tag(:div, flash[:error], class: ["alert", "alert-danger"]) %>
<% elsif flash[:success] %>
<%= content_tag(:div, flash[:success], class: ["alert", "alert-success"]) %>
<% end %>
    <%= yield %>  
</main>  

  </body>
</html>
